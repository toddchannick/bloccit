<% if current_user %>
  <div class="pull-left vote-arrows">
    <div><%= link_to " ", post_up_vote_path(post), class: 'glyphicon glyphicon-chevron-up', id: 'upvote', method: :post, remote: true %></div>

    <div id="post-<%= post.id %>-vote">
      <strong><%= post.points %></strong>
    </div>

    <div><%= link_to " ", post_down_vote_path(post), class: 'glyphicon glyphicon-chevron-down', id: 'downvote', method: :post, remote: true %></div>
  </div>
<% end %>
