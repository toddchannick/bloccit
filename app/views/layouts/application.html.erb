<!DOCTYPE html>
<html>
<head>
  <title>Bloccit</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <ul class="nav nav-tabs top-nav">
      <li><%= link_to "Bloccit", root_path %></li>
      <li><%= link_to "Topics", topics_path %></li>
      <li><%= link_to "About", about_path %></li>


      <% if current_user %>
        <li class="pull-right"><%= link_to "Sign Out", session_path(current_user), method: :delete %></li>
        <li class="nav-text pull-right"><%= current_user.name %> - </li>
      <% else %>
        <li class="pull-right"><%= link_to "Sign In", new_session_path %></li>
        <li class="nav-text pull-right">OR</li>
        <li class="pull-right"><%= link_to "Sign Up", new_user_path %></li>
      <% end %>

    </ul>

 <div class="container-fluid">

    <section class="body">
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>
    </section>
  </div>
  <footer>

  </footer>
</body>
</html>
