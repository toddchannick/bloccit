 <div class="row">
   <div class="ad-form">
     <h1>New Advertisement</h1>
     <br>
     <%= form_for @advertisement do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
       </div>
       <div class="form-group">
         <%= f.label :copy %>
         <%= f.text_area :copy, rows: 4, class: 'form-control', placeholder: "Enter copy body" %>
       </div>
       <div class="form-group">
         <%= f.label :price %>
         <%= f.number_field :price, class: 'form-control', placeholder: "$0.00" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
