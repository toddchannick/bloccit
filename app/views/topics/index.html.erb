<div class = "row">
  <div class = "col-xs-5">
    <h1>Topics</h1>
  </div>
  <div class = "col-xs-5 new-topic-btn pull-right">

    <% if user_is_authorized_for_topics? %>
      <%= link_to new_topic_path do %>
        <button class = "btn btn-sm btn-primary pull-right">
        <i class="glyphicon glyphicon-pencil"></i>
        New Topic
        </button>
      <% end %>
    <% end %>

  </div>
</div>

<div class="row">
 <div class="col-xs-12">
   <%= render @topics %>
 </div>
</div>
