<h1>Topics
  <%= link_to new_topic_path do %>
    <div class = "btn-sm btn-success pull-right">
    <i class="glyphicon glyphicon-pencil"></i>
    New Topic
  </div>
  <% end %>
</h1>

 <div class="row">
   <div class="col-md-8">
     <% @topics.each do |topic| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to topic.name, topic %>
           </h4>
           <small>
             <%= topic.description %>
           </small>
         </div>
       </div>
     <% end %>
   </div>
 </div>
