<% if user_is_authorized_for_topics? || user_is_mod? %>
  <div id="header-buttons">
    <button id="settings" class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="glyphicon glyphicon-edit"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="settings">
      <li>
        <% if user_is_authorized_for_topics? || user_is_mod? %>
          <%= link_to edit_path do %>
            <span class = "btn btn-sm btn-primary"><i class="glyphicon glyphicon-pencil"></i>
              Edit <%= type %>
            </span>
          <% end %>
        <% end %>
      </li>
      <li>
        <% if user_is_authorized_for_topics? %>
          <%= link_to object, method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' } do %>
            <span class = "btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i>
              Delete <%= type %>
            </span>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
<% end %>

<% if current_user %>
  <div id="create-new">
    <button id="new-posts" class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="glyphicon glyphicon-pencil"></span>
    </button>
    <ul class="post-menu dropdown-menu" aria-labelledby="new-posts">
      <li>
        <%= link_to new_topic_post_path(@topic) do %>
          <span class = "btn btn-sm btn-success"><i class="glyphicon glyphicon-pencil"></i>
            New Post
          </span>
        <% end %>
      </li>
    </ul>
  </div>
<% end %>
