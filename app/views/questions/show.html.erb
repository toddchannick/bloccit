<%= link_to questions_path do %>
  <span class = "btn btn-primary" id="back-button">
  <i class="glyphicon glyphicon-menu-left"></i>
  Back to Questions
  </span>
<% end %>

<h1><%= @question.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= @question.body %></p>
     <p class="resolution">
       <% if @question.resolved? %>
         <i class="glyphicon glyphicon-ok-sign answered"></i>
         <span id="resolved">This question has been resolved!</span>
       <% end %>
     </p>
   </div>
 </div>
<br>
 <div class="row">
   <div class="col-md-8">
     <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
     <%= link_to "Delete", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this question?'} %>
   </div>
 </div>
